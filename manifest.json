{
  "manifest_version": 2,
  "name": "ISSUU - Go To Trac Ticket",
  "description": "Highlight a ticket number and click. And BOOM! You're on that ticket.",
  "version": "0.1",
  "options_page": "options.html",

  /* in manifest.json */
  "permissions": [
    "tabs", "*://*/*", "storage"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  // "icons": { "16": "trac-16.png", "48": "trac-48.png", "128": "trac-128.png" }
  "browser_action": {
    "default_icon": "trac-48.png"
  }
}